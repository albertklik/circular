<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alberto.mqttmessenger.MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conectar"
                android:id="@+id/conectbutton" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/serverUri"
                android:text="tcp://192.168.1.63"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome de UsuÃ¡rio"
                android:id="@+id/nomeusuario"
                android:textSize="20sp"
                android:textIsSelectable="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nomeUsuario"
                android:singleLine="true" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listaMensagens"
            android:layout_weight="0.85"
            android:stackFromBottom="true"
            android:transcriptMode="normal"

            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:id="@+id/EditMensagem"
                android:layout_weight="0.66" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Enviar"
                android:id="@+id/EnviarMensagemButton" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
